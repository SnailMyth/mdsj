<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="14dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/btn_ticket_sell"
            android:layout_width="70dp"
            android:layout_height="26dp"
            android:background="@drawable/bg_guard_btn_3"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="@string/ticket_ing"
            android:textColor="@color/fg_btn_buy_guard"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/btn_ticket_history"
            android:layout_width="70dp"
            android:layout_height="26dp"
            android:layout_marginStart="50dp"
            android:background="@drawable/bg_guard_btn_3"
            android:button="@null"
            android:gravity="center"
            android:text="@string/ticket_history"
            android:textColor="@color/fg_btn_buy_guard"
            android:textSize="14sp" />

    </RadioGroup>

    <FrameLayout
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>