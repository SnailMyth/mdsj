<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_gravity="bottom"
    android:layout_marginBottom="5dp"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">

    <LinearLayout
        android:id="@+id/layoutMicEnable"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="right"
        android:layout_marginBottom="15dp"
        android:background="@drawable/bg_mic_enable"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivMicEnable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:src="@mipmap/icon_mic_enable" />

        <TextView
            android:id="@+id/tvMicEnable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="@string/mic_enable"
            android:textColor="@color/textColorE"
            android:textSize="9sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/bg_icon_live"
            android:scaleType="center"
            android:src="@mipmap/icon_live_close" />

        <ImageView
            android:id="@+id/btn_share"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@id/btn_close"
            android:background="@mipmap/icon_live_share"
            android:scaleType="center" />

        <ImageView
            android:id="@+id/btn_function"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@id/btn_share"
            android:background="@drawable/bg_icon_live"
            android:scaleType="center" />

        <ImageView
            android:id="@+id/btn_pk"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_toStartOf="@id/btn_function"
            android:src="@mipmap/icon_live_pk"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/btn_close_game"
            android:layout_width="34dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:background="@drawable/bg_btn_game"
            android:gravity="center"
            android:text="@string/end"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/btn_chat"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/btn_close_game"
            android:background="@drawable/bg_live_anchor_avatar"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:paddingLeft="22dp"
            android:singleLine="true"
            android:text="@string/live_say_to_others"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/red_point"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_alignTop="@id/btn_share"
            android:layout_alignRight="@id/btn_share"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/bg_red_point"
            android:gravity="center"
            android:includeFontPadding="false"
            android:minWidth="14dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:text="1"
            android:textColor="#fff"
            android:textSize="10sp"
            android:translationY="-4dp"
            android:visibility="invisible" />

    </RelativeLayout>
</LinearLayout>