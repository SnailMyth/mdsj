<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="82dp"
    android:layout_marginBottom="1dp"
    android:background="@color/black2">


    <com.wwsl.mdsj.custom.RatioRoundImageView
        android:id="@+id/ivThumb"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:ri_ratio="1"
        app:riv_corner_radius="5dp" />


    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="20dp"
        android:ellipsize="end"
        android:lines="2"
        android:text="Oece2019冬装新款女装 双排扣中长款双面呢大衣韩版秋...Oece2019冬装新款女装 双排扣中长款双面呢大衣韩版秋...Oece2019冬装新款女装 双排扣中长款双面呢大衣韩版秋..."
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivThumb"
        app:layout_constraintTop_toTopOf="@id/ivThumb" />

    <TextView
        android:id="@+id/tvPriceNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="￥149"
        android:textColor="#ffff4655"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/title"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <TextView
        android:id="@+id/tvPriceOld"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="原价:￥249"
        android:textColor="#ff7e7e7e"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvPriceNow"
        app:layout_constraintStart_toEndOf="@+id/tvPriceNow" />


    <TextView
        android:id="@+id/btnGet"
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bg_confirm"
        android:gravity="center"
        android:text="下单"
        android:textColor="#ffffffff"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>