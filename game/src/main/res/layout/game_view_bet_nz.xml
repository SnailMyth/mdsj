<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    >

    <com.wwsl.game.custom.DrawableTextView2
        android:id="@+id/coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:clickable="true"
        android:gravity="center_vertical"
        android:text="@string/game_charge"
        android:textColor="@color/gameGlobal"
        android:textSize="14sp"
        app:dt2_right_drawable="@mipmap/icon_game_arrow_right_1"
        app:dt2_right_height="14dp"
        app:dt2_right_width="14dp"
        />

    <ImageView
        android:id="@+id/btn_record"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:adjustViewBounds="true"
        android:src="@mipmap/bg_nz_sf"
        />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@id/btn_record"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <RadioButton
            android:id="@+id/btn_bet_shi"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:background="@drawable/bg_game_bet_1"
            android:button="@null"
            android:checked="true"
            />

        <RadioButton
            android:id="@+id/btn_bet_bai"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/bg_game_bet_10"
            android:button="@null"
            />

        <RadioButton
            android:id="@+id/btn_bet_qian"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/bg_game_bet_100"
            android:button="@null"
            />

        <RadioButton
            android:id="@+id/btn_bet_wan"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/bg_game_bet_1000"
            android:button="@null"
            />

    </RadioGroup>
</RelativeLayout>